{% extends 'base.html.twig' %}
{% block title %}Detall Usuari{% endblock %}
{% block body %}
    <section class="content-header">
        <!-- Content Header (Page header) -->
        <h1>
            Detall
            <small>usuari</small>
        </h1>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">codi: {{ user.pickCode }}</h3>
                <a href="{{ path('userList') }}" class="btn btn-default pull-right" role="button">Torna enrere</a>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <strong><i class="fa fa-user margin-r-5"></i> Nom</strong>

                <p class="text-muted">
                    {{ user.name }} {{ user.surenames }}
                </p>

                <hr>

                <strong><i class="fa fa-key margin-r-5"></i> Permissos</strong>
                {% for role in user.roles %}
                    <p class="text-muted">{{ role }}</p>
                {% endfor %}
                <hr>

            </div>
            <!-- /.box-body -->
            <div class="box-footer">

            </div>
        </div>
    </section>
{% endblock %}